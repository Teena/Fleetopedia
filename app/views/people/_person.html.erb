<h1> Person Details </h1>
<%= form_for @person do |f| %>
  <p><label for="mnemonic">Person ID</label>:
    <%= f.text_field :mnemonic %></p>
  <p><label for="person_name">Name</label>:
    <%= f.text_field :name %></p>
  <p><label for="person_email">Email ID</label>:
    <%= f.text_field :email %></p>

    <%= f.fields_for :person_addresses  do |address| %>
      <%= render 'address_fields', :f => address %>
    <% end %>
  <%= f.submit %>
<% end %>