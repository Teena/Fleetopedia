<h1>Driver</h1>
<%= form_for @driver do |f| %>
  <p><label for="driver_license_no">License Number</label>:
    <%= f.text_field :license_no %></p>
  <p><lable for="driver_name">Name</label>:
    <%= f.text_field :name %></p>
  <p><label for="driver_dob">Date of Birth</label>:
    <%= f.text_field :dob %></p>
  <p><label for="driver_address">Address</label>:
    <%= f.text_field :address %></p>
  <p><label for="driver_contact_no">Contact Number</label>:
    <%= f.text_field :contact_no %></p>
  <p><label for="driver_nationality">Nationality</label>:
    <%= f.text_field :nationality %></p>
  <%= f.submit %>
<% end %>
